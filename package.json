    "graphql": "16.7.1",
    "graphql-type-json": "0.3.2",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "stylelint": "15.10.2",
