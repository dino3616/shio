{
  "name": "@shio/catalog",
  "version": "0.1.0",
  "repository": "https://github.com/dino3616/shio.git",
  "license": "MIT",
  "private": true,
  "type": "module",
  "module": "nodenext",
  "scripts": {
    "lint": "eslint './**/{*.*js,*.*ts,*.*tsx}'",
    "lint:fix": "eslint './**/{*.*js,*.*ts,*.*tsx}' --fix",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "style": "stylelint ./{,.}**/*.{css,scss}",
    "style:fix": "stylelint ./{,.}**/*.{css,scss} --fix",
    "test": "jest --silent=false --verbose false --passWithNoTests",
    "sb": "storybook dev --port 6006",
    "sb:build": "storybook build -o ./.storybook/static",
    "chromatic": "pnpx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@shio/core": "workspace:*",
    "@shio/design-token": "workspace:*",
    "@shio/tailwind": "workspace:*",
    "dotenv": "16.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@shio/jest": "workspace:*",
    "@shio/postcss": "workspace:*",
    "@shio/prettier": "workspace:*",
    "@shio/stylelint": "workspace:*",
    "@shio/tsconfig": "workspace:*",
    "@storybook/addon-a11y": "7.3.2",
    "@storybook/addon-essentials": "7.3.2",
    "@storybook/addon-styling": "1.3.7",
    "@storybook/addon-viewport": "7.3.2",
    "@storybook/addons": "7.3.2",
    "@storybook/nextjs": "7.3.2",
    "@storybook/react": "7.3.2",
    "@storybook/theming": "7.3.2",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "chromatic": "6.24.0",
    "eslint-config-shio-nextjs": "workspace:*",
    "storybook": "7.3.2"
  }
}
