{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@shio/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "#core/*": ["../../packages/core/*"]
    }
  },
  "include": ["./src/**/*", "./*.*js", "./*.*ts", ".next/types/**/*.*ts", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
