{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@shio/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"],
      "#core/*": ["../../packages/core/*"]
    }
  },
  "include": ["./src/**/*", "./*.*ts"],
  "exclude": ["**/node_modules/**/*", "./*.*js"]
}
